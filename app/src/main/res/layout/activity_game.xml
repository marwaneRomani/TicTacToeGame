                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.418"
                app:lottie_autoPlay="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/_6"
                android:layout_width="90dp"
